{
	"name": "Omniscience UPnP",
	"description": "Omniscience UPnP Chrome Test App.",
	"version": "0.5.0",
	"manifest_version": 2,
	"app": {
		"background": { "scripts": [ "./Chrome_Background.js" ] }
	},
	"permissions":[
		"http://*/",
		"notifications",
		"storage"
	],
	"sockets": {
		"tcpServer": { "listen": [ "*" ] },
		"tcp": { "connect": "*" },
		"udp": {
			"bind": "*",
			"send": "*",
			"multicastMembership": ""
		}
	},
	"icons": { "64": "./data/logo_64.png" }
}